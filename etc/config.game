skynetroot = "./skynet/"
root = "./"
thread = 8
logger = nil
logpath = "."
harbor = 0
start = "main"	-- main script
bootstrap = "snlua bootstrap"	-- The service for bootstrap

debug_port = 8001

-- 集群名称配置文件
cluster = "./cluster/clustername.lua"
nodename = "game"

log_dirname = "log"
log_basename = "game"

gameservice = "./game/?.lua;" ..
			  "./game/data/?.lua;" ..
			  "./game/user/?.lua;" ..
			  "./game/hangar/?.lua;" ..
			  "./game/teammatch/?.lua;" ..
			  "./game/player/?.lua;" ..
			  "./game/battle/?.lua;" ..
			  "./game/chip/?.lua;" ..
			  "./game/scan/?.lua;" ..		
			  "./game/warehouse/?.lua;" ..
			  "./game/shop/?.lua;" ..
			  "./game/assignment/?.lua;" ..	
			  "./game/cheat/?.lua;" ..
			  "./game/businessqueue/?.lua;" ..	
			  "./game/addiction/?.lua;" ..		  
			  "./game/achievement/?.lua;" ..	
			  "./common/?.lua;" ..
			  "./common/cluster/?.lua;" ..
			  "./common/datacenter/?.lua"

-- LUA服务所在位置
luaservice = skynetroot .. "service/?.lua;" .. gameservice
snax = gameservice

-- 用于加载LUA服务的LUA代码
lualoader = skynetroot .. "lualib/loader.lua"
preload = "./global/preload.lua"	-- run preload.lua before every lua service run

-- C编写的服务模块路径
cpath = skynetroot .. "cservice/?.so"

-- 将添加到 package.path 中的路径，供 require 调用。
lua_path = skynetroot .. "lualib/?.lua;" ..
		   "./lualib/?.lua;" ..
		   "./global/?.lua;" ..
		   "./proto/?.lua;" ..
		   "./proto/errcode/?.lua;" ..
		   skynetroot .. "lualib/skynet/db/?.lua;" ..
		   skynetroot .. "lualib/skynet/?.lua;" ..
		   "./skynet/lualib/compat10/?.lua;" ..
		   "./common/entitybase/?.lua;" ..
		   "./common/entity/?.lua;" ..
		   "./common/time/?.lua;" ..
		   	"./game/define/?.lua;" ..
			root .. "?.lua;"
			 

-- 将添加到 package.cpath 中的路径，供 require 调用。
lua_cpath = skynetroot .. "luaclib/?.so;" .. "./luaclib/?.so"

-- 后台模式
--daemon = "./game.pid"

port = 5189					-- 监听端口
maxclient = 1000				-- 最大连接数

mysql_maxconn = 10					-- mysql数据库最大连接数
mysql_host = "$ATHENA_MYSQL_HOST"	-- mysql数据库主机
mysql_port = $ATHENA_MYSQL_PORT		-- mysql数据库端口
mysql_db = "$ATHENA_MYSQL_DB"		-- mysql数据库库名
mysql_user = "$ATHENA_MYSQL_USER"	-- mysql数据库帐号
mysql_pwd = "$ATHENA_MYSQL_PWD"		-- mysql数据库密码

redis_maxinst = 1			-- redis最大实例数

redis_host1 = "127.0.0.1"	-- redis数据库IP
redis_port1 = 6399			-- redis数据库端口
redis_auth1 = "123456"		-- redis数据库密码

